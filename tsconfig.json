{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "es2016",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noImplicitReturns": true
    },

    "include": [
        "./ast/**/*",
        "./backend/**/*",
        "./test/**/*", "semantics/multi-type.ts"
    ]
}