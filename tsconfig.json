{   
    "compileOnSave": true,
    
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": false,
        "target": "es2016",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "rootDir": "src" 
    },

    "include": [
        "src/**/*", "test/test-syntax-parser.js", "test/test-ast-accessor.js",
    ],

    "exclude": [
        "src/test/**/*"
    ]
}