{   
    "compileOnSave": true,
    
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": false,
        "target": "es2016",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noImplicitReturns": true
    },

    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}